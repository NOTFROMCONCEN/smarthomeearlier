<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_bj"
    tools:context=".ResActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/d_zc" />

    <EditText
        android:id="@+id/edname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:ems="10"
        android:hint="请输入账号"
        android:textColor="#fff" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/Edqe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Edpwd1"
        android:layout_below="@+id/Edpwd1"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="请再次输入密码"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/Edpwd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edname1"
        android:layout_below="@+id/edname1"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="请输入密码"
        android:textColor="#fff" />

    <Button
        android:id="@+id/butzc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Edqe"
        android:layout_below="@+id/Edqe"
        android:background="#0000ff"
        android:layout_marginLeft="52dp"
        android:text="注册" />

    <TextView
        android:id="@+id/textdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/butzc"
        android:layout_below="@+id/butzc"
        android:layout_marginLeft="25dp"
        android:text="  登录"
        android:textColor="#fff"
        android:textSize="25sp" />

</RelativeLayout>