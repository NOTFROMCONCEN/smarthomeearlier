<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="217dp"
        android:layout_marginTop="111dp"
        android:text="端口号："
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edduankou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:text="6006" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/edduankou"
        android:layout_marginTop="34dp"
        android:text="IP地址："
        android:textSize="25sp" />

    <EditText
        android:id="@+id/Edip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:text="19.1.10.2" />

    <Button
        android:id="@+id/butdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edduankou"
        android:layout_below="@+id/Edip"
        android:layout_marginTop="23dp"
        android:text="登录" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:background="@drawable/hd"
        android:layout_marginLeft="68dp"
        android:thumb="@drawable/hk"
        android:maxHeight="80dp"
        android:layout_toRightOf="@+id/edduankou" />

    <TextView
        android:id="@+id/tedl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar1"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/butdl"
        android:text="TextView"
        android:textSize="25sp" />

</RelativeLayout>