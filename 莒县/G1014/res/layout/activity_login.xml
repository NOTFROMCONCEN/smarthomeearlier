<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj_1"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="299dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/bai"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址："
            android:textColor="#fff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18.1.10.7"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/bai"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textColor="#fff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/Edname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="bizideal"
            android:textColor="#fff" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_centerVertical="true"
        android:background="@drawable/bai"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  密码："
            android:textColor="#fff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/Edpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="123456"
            android:textColor="#fff" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/chjz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="21dp"
        android:text="记住密码"
        android:textColor="#f00" />

    <CheckBox
        android:id="@+id/Chdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chjz"
        android:layout_alignBottom="@+id/chjz"
        android:layout_alignRight="@+id/linearLayout3"
        android:text="自动登录"
        android:textColor="#f00" />

    <Button
        android:id="@+id/butdl"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Chdl"
        android:layout_below="@+id/chjz"
        android:layout_marginRight="58dp"
        android:layout_marginTop="27dp"
        android:background="#0000ff"
        android:text="登录" />

</RelativeLayout>