<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj_1"
    tools:context=".MoshiActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="1020dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bai"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="    安防模式"
            android:textColor="#fff"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/chaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1020dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/bai"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="    离家模式"
            android:textColor="#fff"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/Chlj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="1020dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="45dp"
        android:background="@drawable/bai"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="    自定义模式"
            android:textColor="#fff"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/Chzdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Spinner
        android:id="@+id/Spdx"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="54dp"
        android:entries="@array/dx" />

    <EditText
        android:id="@+id/edlian"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Spdx"
        android:layout_toRightOf="@+id/Spdx"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Switch
        android:id="@+id/swmoshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edlian"
        android:layout_toRightOf="@+id/edlian"
        android:textOff="关闭"
        android:textOn="开启" />

    <CheckBox
        android:id="@+id/Chbjd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chlamp"
        android:layout_alignBottom="@+id/chlamp"
        android:layout_toRightOf="@+id/swmoshi"
        android:text="报警灯"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/Chfan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Chbjd"
        android:layout_alignBottom="@+id/Chbjd"
        android:layout_alignRight="@+id/edlian"
        android:layout_marginRight="24dp"
        android:text="风扇"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/Chtd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Chfan"
        android:layout_below="@+id/Chfan"
        android:layout_marginTop="47dp"
        android:text="通道二"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/Chtd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Chtd1"
        android:layout_alignBottom="@+id/Chtd1"
        android:layout_alignLeft="@+id/Chbjd"
        android:text="通道三"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/chlamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Spdx"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="38dp"
        android:text="射灯"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/Chtd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Chtd2"
        android:layout_alignBottom="@+id/Chtd2"
        android:layout_alignLeft="@+id/chlamp"
        android:text="通道一"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edlian"
        android:layout_alignBottom="@+id/edlian"
        android:layout_alignLeft="@+id/chlamp"
        android:text="温度"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/Chdoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Chbjd"
        android:layout_alignBottom="@+id/Chbjd"
        android:layout_marginLeft="148dp"
        android:layout_toRightOf="@+id/Chbjd"
        android:text="门禁"
        android:textColor="#fff"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/Chcl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Chtd3"
        android:layout_alignBottom="@+id/Chtd3"
        android:layout_alignLeft="@+id/Chdoor"
        android:text="窗帘"
        android:textColor="#fff"
        android:textSize="25sp" />

</RelativeLayout>