<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="141dp"
        android:text="端口号："
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="IP地址："
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edduankou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:text="1" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/Edip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:text="1" />

    <Button
        android:id="@+id/butdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Edip"
        android:layout_below="@+id/Edip"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="24dp"
        android:text="登录" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/butdl"
        android:layout_marginLeft="87dp"
        android:layout_toRightOf="@+id/butdl"
        android:background="@drawable/hd"
        android:maxHeight="90dp"
        android:thumb="@drawable/hk" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/seekBar1"
        android:layout_marginTop="34dp"
        android:textSize="25sp" />

</RelativeLayout>