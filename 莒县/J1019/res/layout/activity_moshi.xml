<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj_03"
    tools:context=".MoshiActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="45dp"
        android:text="上班模式"
        android:textColor="#fff"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/chsb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1" />

    <CheckBox
        android:id="@+id/Chxb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_toRightOf="@+id/TextView01" />

    <TextView
        android:id="@+id/tesb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chsb"
        android:layout_alignBottom="@+id/chsb"
        android:layout_toRightOf="@+id/imageView1"
        android:text="窗帘关，如果人体红外检测有人，则窗帘开，射灯闪烁"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Texb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Chxb"
        android:layout_toRightOf="@+id/imageView1"
        android:text="射灯开，空调开，如果烟雾值大于600则风扇开，否则风扇关"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Tesm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Chsm"
        android:layout_toRightOf="@+id/imageView1"
        android:text="窗帘关，如果人体红外检测有人则报警灯开，射灯开"
        android:textColor="#fff"
        android:textSize="20sp" />

    <com.example.j1019.Myview
        android:id="@+id/Myview"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="162dp" />

    <CheckBox
        android:id="@+id/Chsm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chsb"
        android:layout_alignTop="@+id/TextView02" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Myview"
        android:layout_marginBottom="76dp"
        android:layout_toLeftOf="@+id/Chsm"
        android:text="下班模式"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="24dp"
        android:text="睡眠模式"
        android:textColor="#fff"
        android:textSize="30sp" />

</RelativeLayout>