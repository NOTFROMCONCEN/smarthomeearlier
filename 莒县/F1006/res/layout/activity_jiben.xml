<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj_2"
    tools:context=".JIbenActivity" >

    <RadioButton
        android:id="@+id/rad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:text="电视"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rad1"
        android:layout_alignBottom="@+id/rad1"
        android:layout_marginLeft="99dp"
        android:layout_toRightOf="@+id/rad1"
        android:text="空调"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad2"
        android:layout_alignBottom="@+id/Rad2"
        android:layout_marginLeft="88dp"
        android:layout_toRightOf="@+id/Rad2"
        android:text="射灯左"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad3"
        android:layout_alignBottom="@+id/Rad3"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/rad1"
        android:text="DVD"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad4"
        android:layout_alignBottom="@+id/Rad4"
        android:layout_marginLeft="104dp"
        android:layout_toRightOf="@+id/Rad4"
        android:text="窗帘"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad5"
        android:layout_alignBottom="@+id/Rad5"
        android:layout_marginLeft="99dp"
        android:layout_toRightOf="@+id/Rad5"
        android:text="门禁"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Radk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad7"
        android:layout_alignBottom="@+id/Rad7"
        android:layout_marginLeft="170dp"
        android:layout_toRightOf="@+id/Rad7"
        android:text="开"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Radt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Radk"
        android:layout_alignBottom="@+id/Radk"
        android:layout_alignParentRight="true"
        android:layout_marginRight="37dp"
        android:text="停"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Radg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Radt"
        android:layout_alignBottom="@+id/Radt"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/Radt"
        android:text="关"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad6"
        android:layout_alignBottom="@+id/Rad6"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/Rad4"
        android:text="射灯右"
        android:textColor="#fff" />

    <RadioButton
        android:id="@+id/Rad8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rad7"
        android:layout_alignBottom="@+id/Rad7"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/Rad7"
        android:text="风扇"
        android:textColor="#fff" />

    <com.example.f1006.Myview
         android:id="@+id/myview"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Rad6" />

    <com.example.f1006.Myzhu
        android:id="@+id/myzhu"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/myview"
        android:layout_centerVertical="true" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myview" />

    <TextView
        android:id="@+id/textqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekBar1"
        android:text="1"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Textzhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seekBar1"
        android:text="100"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_alignLeft="@+id/rad1"
        android:dividerHeight="2dp"
        android:divider="#fff"
        android:layout_alignTop="@+id/myview"
        android:layout_marginTop="22dp" >
    </ListView>

</RelativeLayout>