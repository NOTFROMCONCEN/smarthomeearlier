<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bjb"
    tools:context=".QingjActivity" >

    <ImageView
        android:id="@+id/ivfan3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/zuo" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/ivfan3"
        android:layout_toRightOf="@+id/ivfan3"
        android:src="@drawable/qjj" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivfan3"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:text="执行条件"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivfan3"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@+id/ivfan3"
        android:text="传感器"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btntemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_toRightOf="@+id/TextView01"
        android:background="@drawable/qjbtn"
        android:text="温度"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnhum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btntemp"
        android:layout_alignBottom="@+id/btntemp"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/btntemp"
        android:background="@drawable/qjbtn"
        android:text="湿度"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btntemp"
        android:layout_alignBottom="@+id/btntemp"
        android:layout_marginLeft="56dp"
        android:layout_toRightOf="@+id/ImageView01"
        android:background="@drawable/qjbtn"
        android:text="Co2"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnhum"
        android:layout_alignBottom="@+id/btnhum"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/btnhum"
        android:background="@drawable/qjbtn"
        android:text="光照"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnsmoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnco2"
        android:layout_alignBottom="@+id/btnco2"
        android:layout_marginLeft="113dp"
        android:layout_toRightOf="@+id/btnco2"
        android:background="@drawable/qjbtn"
        android:text="烟雾"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnill"
        android:layout_alignBottom="@+id/btnill"
        android:layout_marginLeft="115dp"
        android:layout_toRightOf="@+id/btnill"
        android:background="@drawable/qjbtn"
        android:text="气压"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnpm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnsmoke"
        android:layout_alignBottom="@+id/btnsmoke"
        android:layout_marginLeft="118dp"
        android:layout_toRightOf="@+id/btnsmoke"
        android:background="@drawable/qjbtn"
        android:text="PM2.5"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btngas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnair"
        android:layout_alignBottom="@+id/btnair"
        android:layout_marginLeft="118dp"
        android:layout_toRightOf="@+id/btnair"
        android:background="@drawable/qjbtn"
        android:text="燃气"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnpm25"
        android:layout_alignBottom="@+id/btnpm25"
        android:layout_alignParentRight="true"
        android:layout_marginRight="71dp"
        android:background="@drawable/qjbtn"
        android:text="人体红外"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="37dp"
        android:layout_toLeftOf="@+id/btntemp"
        android:text="条件"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_toRightOf="@+id/TextView01"
        android:background="@drawable/qjbtn"
        android:text="大于"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnx"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnd"
        android:layout_alignBottom="@+id/btnd"
        android:layout_alignLeft="@+id/btnco2"
        android:background="@drawable/qjbtn"
        android:text="小于"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="97dp"
        android:text="阈值"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etsj"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/TextView03"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_alignLeft="@+id/btnd"
        android:background="@drawable/qjbtn"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etsj"
        android:layout_toLeftOf="@+id/TextView01"
        android:text="执行动作"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView03"
        android:layout_below="@+id/etsj"
        android:layout_marginTop="33dp"
        android:text="动作"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnk"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etsj"
        android:layout_alignTop="@+id/TextView05"
        android:background="@drawable/qjbtn"
        android:text="打开"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btng"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnx"
        android:layout_alignTop="@+id/TextView05"
        android:background="@drawable/qjbtn"
        android:text="关闭"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:text="设备"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnlamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnk"
        android:layout_alignTop="@+id/TextView06"
        android:background="@drawable/qjbtn"
        android:text="射灯"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btndoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnlamp"
        android:layout_alignBottom="@+id/btnlamp"
        android:layout_toLeftOf="@+id/btnill"
        android:background="@drawable/qjbtn"
        android:text="门禁"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnfan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnlamp"
        android:layout_alignBottom="@+id/btnlamp"
        android:layout_toLeftOf="@+id/btnsmoke"
        android:background="@drawable/qjbtn"
        android:text="风扇"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnzncz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnfan"
        android:layout_alignBottom="@+id/btnfan"
        android:layout_toLeftOf="@+id/btnair"
        android:background="@drawable/qjbtn"
        android:text="智能插座"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnbjd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnfan"
        android:layout_alignBottom="@+id/btnfan"
        android:layout_toLeftOf="@+id/btnpm25"
        android:background="@drawable/qjbtn"
        android:text="报警灯"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btntv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnzncz"
        android:layout_alignBottom="@+id/btnzncz"
        android:layout_toLeftOf="@+id/btngas"
        android:background="@drawable/qjbtn"
        android:text="电视"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btndvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnbjd"
        android:layout_alignBottom="@+id/btnbjd"
        android:layout_alignLeft="@+id/btnpm25"
        android:background="@drawable/qjbtn"
        android:text="DVD"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnjsq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btntv"
        android:layout_alignBottom="@+id/btntv"
        android:layout_alignLeft="@+id/btngas"
        android:background="@drawable/qjbtn"
        android:text="加湿器"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndvd"
        android:layout_alignBottom="@+id/btndvd"
        android:layout_alignLeft="@+id/btnman"
        android:background="@drawable/qjbtn"
        android:text="空调"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/ivqkg"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_toRightOf="@+id/btnkt"
        android:src="@drawable/kga" />

</RelativeLayout>