<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XuanActivity" >

    <ImageView
        android:id="@+id/imjiben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="286dp"
        android:layout_marginTop="83dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/Imliandong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imjiben"
        android:layout_below="@+id/imjiben"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/Imhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Imliandong"
        android:layout_below="@+id/Immsohi"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/Immsohi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Imhui"
        android:layout_below="@+id/Imliandong"
        android:layout_marginTop="38dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tejiben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Imliandong"
        android:layout_toRightOf="@+id/imjiben"
        android:text="基本"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Telaindong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Immsohi"
        android:layout_toRightOf="@+id/Imliandong"
        android:text="联动"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Temoshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Imhui"
        android:layout_alignLeft="@+id/tejiben"
        android:text="模式"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Tehuitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Imhui"
        android:layout_alignLeft="@+id/Telaindong"
        android:text="绘图"
        android:textSize="25sp" />
    <com.example.c1017.time
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp" />

</RelativeLayout>