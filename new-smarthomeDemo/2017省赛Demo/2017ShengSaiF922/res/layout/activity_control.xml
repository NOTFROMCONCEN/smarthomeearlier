<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_lamp"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/toggbutton_lamp"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_fan"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/toggbutton_fan"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_warm"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/toggbutton_warm"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_door"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/toggbutton_door"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            android:layout_weight="1"
            android:gravity="bottom|center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200sp"
                android:layout_height="35sp"
                android:src="@drawable/remote_controller" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_tongdao_1"
                    android:layout_width="100sp"
                    android:layout_height="44sp"
                    android:background="@drawable/tongdao1_back"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_tongdao_2"
                    android:layout_width="100sp"
                    android:layout_height="44sp"
                    android:background="@drawable/tongdao2_back"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tg_tongdao_3"
                    android:layout_width="100sp"
                    android:layout_height="44sp"
                    android:background="@drawable/tongdao3_back"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            android:layout_weight="1"
            android:gravity="bottom|center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200sp"
                android:layout_height="35sp"
                android:src="@drawable/chuanglian" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_cur_open"
                    android:layout_width="75sp"
                    android:layout_height="97sp"
                    android:background="@drawable/curtain_open_pressed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_cur_stop"
                    android:layout_width="75sp"
                    android:layout_height="97sp"
                    android:background="@drawable/curtain_stop_pressed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_cur_cls"
                    android:layout_width="75sp"
                    android:layout_height="97sp"
                    android:background="@drawable/curtain_close_pressed" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>