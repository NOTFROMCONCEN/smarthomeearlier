<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup1" >
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/ra_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radio_button_back_base"
            android:button="@null"
            android:checked="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="采集与控制"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/ra_link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radio_button_back_link"
            android:button="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="自定义模式"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/ra_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radio_button_back_base"
            android:button="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="模式选择"
            android:textColor="#fff" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_alignBottom="@+id/pager"
        android:layout_alignParentLeft="true"
        android:background="#fd0000" />

</RelativeLayout>