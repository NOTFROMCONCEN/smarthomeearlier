<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.guosaigdemo911.MyView
        android:id="@+id/myview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lv_top"
        android:layout_marginBottom="50sp"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="150sp"
        android:background="#ffffff" >
    </com.example.guosaigdemo911.MyView>

    <LinearLayout
        android:id="@+id/lv_top"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/tg_ill_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="@drawable/toggbutton"
            android:textColor="#ffffff"
            android:textOff="光照"
            android:textOn="光照"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/tg_temp_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="200sp"
            android:layout_weight="1"
            android:background="@drawable/toggbutton"
            android:textColor="#ffffff"
            android:textOff="温度"
            android:textOn="温度"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_draw_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:text="time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_ill_temp_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_top"
        android:layout_centerHorizontal="true"
        android:text="光照一小时统计图"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/myview"
        android:layout_alignRight="@+id/myview"
        android:layout_marginBottom="39dp"
        android:layout_marginRight="52dp"
        android:text="单位：Lx" />

</RelativeLayout>