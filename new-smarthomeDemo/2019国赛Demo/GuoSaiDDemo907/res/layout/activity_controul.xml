<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg09" >

    <LinearLayout
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/iv_back_shebeikongzhi_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backbutton" />

            <ImageView
                android:id="@+id/iv_back_shebeikongzhi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shebeikongzhi" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_center"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_above="@+id/line_buttome"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ImageView06"
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback01" />

                    <LinearLayout
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_alignLeft="@+id/ImageView06"
                        android:layout_alignTop="@+id/ImageView06"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="9sp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/ImageView05"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/lamp" />

                            <TextView
                                android:id="@+id/TextView03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:text="射灯"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_vertical|center_horizontal"
                            android:orientation="horizontal" >

                            <ToggleButton
                                android:id="@+id/tg_lamp"
                                android:layout_width="43sp"
                                android:layout_height="26sp"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/toggbutton"
                                android:textOff=""
                                android:textOn="" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback01" />

                    <LinearLayout
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_alignLeft="@+id/ImageView04"
                        android:layout_alignTop="@+id/ImageView04"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="9sp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/ImageView03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/door" />

                            <TextView
                                android:id="@+id/TextView02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:text="门禁"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_vertical|center_horizontal"
                            android:orientation="horizontal" >

                            <ToggleButton
                                android:id="@+id/tg_door"
                                android:layout_width="43sp"
                                android:layout_height="26sp"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/toggbutton"
                                android:textOff=""
                                android:textOn="" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback01" />

                    <LinearLayout
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_alignLeft="@+id/ImageView02"
                        android:layout_alignTop="@+id/ImageView02"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="9sp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/ImageView01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fan" />

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:text="风扇"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_vertical|center_horizontal"
                            android:orientation="horizontal" >

                            <ToggleButton
                                android:id="@+id/tg_fan"
                                android:layout_width="43sp"
                                android:layout_height="26sp"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/toggbutton"
                                android:textOff=""
                                android:textOn="" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback01" />

                    <LinearLayout
                        android:layout_width="129sp"
                        android:layout_height="100sp"
                        android:layout_alignLeft="@+id/imageView1"
                        android:layout_alignTop="@+id/imageView1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="9sp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/warnligth" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:text="报警灯"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_vertical|center_horizontal"
                            android:orientation="horizontal" >

                            <ToggleButton
                                android:id="@+id/tg_warm"
                                android:layout_width="43sp"
                                android:layout_height="26sp"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/toggbutton"
                                android:textOff=""
                                android:textOn="" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ImageView12"
                        android:layout_width="129sp"
                        android:layout_height="153sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback02" />

                    <ImageView
                        android:id="@+id/ImageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ImageView12"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:src="@drawable/tv" />

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ImageView11"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp"
                        android:text="电视机"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/btn_tv_open"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView12"
                        android:layout_marginBottom="20sp"
                        android:layout_toLeftOf="@+id/TextView06"
                        android:background="@drawable/buttonopen" />

                    <Button
                        android:id="@+id/btn_tv_play"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView12"
                        android:layout_marginBottom="20sp"
                        android:layout_toRightOf="@+id/TextView06"
                        android:background="@drawable/player" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ImageView10"
                        android:layout_width="129sp"
                        android:layout_height="153sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback02" />

                    <ImageView
                        android:id="@+id/ImageView09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ImageView10"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:src="@drawable/dvd" />

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ImageView09"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp"
                        android:text="DVD"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/btn_dvd_open"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView10"
                        android:layout_marginBottom="20sp"
                        android:layout_toLeftOf="@+id/TextView05"
                        android:background="@drawable/buttonopen" />

                    <Button
                        android:id="@+id/btn_dvd_play"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView10"
                        android:layout_marginBottom="20sp"
                        android:layout_toRightOf="@+id/TextView05"
                        android:background="@drawable/player" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ImageView08"
                        android:layout_width="129sp"
                        android:layout_height="153sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback02" />

                    <ImageView
                        android:id="@+id/ImageView07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ImageView08"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:src="@drawable/chuanglianlogo" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ImageView07"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp"
                        android:text="窗帘"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/btn_cur_open"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView08"
                        android:layout_toLeftOf="@+id/TextView04"
                        android:background="@drawable/chuanglianopen" />

                    <Button
                        android:id="@+id/btn_cur_cls"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView08"
                        android:layout_toRightOf="@+id/TextView04"
                        android:background="@drawable/chuangliancls" />

                    <Button
                        android:id="@+id/btn_cur_stop"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/ImageView08"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/chuanglianstop" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="129sp"
                        android:layout_height="153sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineback02" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:src="@drawable/kongtiao" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp"
                        android:text="空调"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/btn_kongtiao_open"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_marginBottom="20sp"
                        android:layout_toLeftOf="@+id/textView2"
                        android:background="@drawable/buttonopen" />

                    <Button
                        android:id="@+id/btn_kongtiao_play"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_marginBottom="20sp"
                        android:layout_toRightOf="@+id/textView2"
                        android:background="@drawable/player" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_buttome"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="right|center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_shebeikongzhi_time"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="140sp"
            android:text="2019-9-15 55:55:55"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>