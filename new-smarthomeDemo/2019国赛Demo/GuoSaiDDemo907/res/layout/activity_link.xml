<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg10" >

    <LinearLayout
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/iv_back_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backbutton" />

            <ImageView
                android:id="@+id/iv_back_link_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qingjingmoshi" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ToggleButton
                android:id="@+id/tg_link_start"
                android:layout_width="43sp"
                android:layout_height="26sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:background="@drawable/toggbutton"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行条件"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="传感器"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio0"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="温度"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="湿度"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="燃气"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio3"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="光照度"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio4"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="PM2.5"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio5"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="气压"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio6"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="烟雾"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio7"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Co2"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio8"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="人体红外"
                            android:textColor="#fff" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    条件"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_big"
                            android:layout_width="150sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="大于"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/radio_small"
                            android:layout_width="150sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="小于"
                            android:textColor="#fff" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    阈值"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/et_number_get"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:background="@drawable/toggbutton03"
                        android:ems="10" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行动作"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    设备"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <RadioGroup
                        android:id="@+id/RadioGroup02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/ra_open"
                            android:layout_width="150sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="打开"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/ra_cls"
                            android:layout_width="150sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="关闭"
                            android:textColor="#fff" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    设备"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <RadioGroup
                        android:id="@+id/RadioGroup01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/RadioButton01"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="射灯"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton02"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="门禁"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton03"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="风扇"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton04"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="智能插座"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton05"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="报警灯"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton06"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="电视"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton07"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="DVD"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton08"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="加湿器"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/RadioButton09"
                            android:layout_width="70sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linktoggbuttonback"
                            android:button="@null"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="空调"
                            android:textColor="#fff" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>