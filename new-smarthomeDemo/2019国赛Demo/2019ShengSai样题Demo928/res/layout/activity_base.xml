<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_intent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据采集："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="温度："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="湿度："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="烟雾："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_smo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="燃气："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="光照："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_ill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="气压："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="Co2："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="PM2.5："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="人体红外："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120sp"
                android:text="电器控制："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/tg_lamp"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/lamp_toggbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/tg_cur"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/cur_toggbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/tg_fan"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/fan_toggbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/tg_warm"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/warm_toggbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/tg_door"
                    android:layout_width="71sp"
                    android:layout_height="80sp"
                    android:background="@drawable/door_toggbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_tongdao_1"
                    android:layout_width="100sp"
                    android:layout_height="40sp"
                    android:background="@drawable/tongdao1open" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_tongdao_2"
                    android:layout_width="100sp"
                    android:layout_height="40sp"
                    android:background="@drawable/tongdao2open" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_tongdao_3"
                    android:layout_width="100sp"
                    android:layout_height="40sp"
                    android:background="@drawable/tongdao3open" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>