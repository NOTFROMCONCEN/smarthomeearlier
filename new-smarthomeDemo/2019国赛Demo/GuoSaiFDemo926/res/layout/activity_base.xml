<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/re_open_dialog"
    android:background="@drawable/bg2" >

    <com.example.guosaifdemo926.MyView01
        android:id="@+id/myview01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_left_number"
        android:layout_below="@+id/rg_state"
        android:clickable="true"
        android:visibility="visible" >
    </com.example.guosaifdemo926.MyView01>

    <com.example.guosaifdemo926.MyView02
        android:id="@+id/myview02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_left_number"
        android:layout_below="@+id/rg_state"
        android:visibility="gone" >
    </com.example.guosaifdemo926.MyView02>

    <RadioGroup
        android:id="@+id/rg_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/ra_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="电视"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_dvd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DVD"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_kongtiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_lamp_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="射灯左"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_lamp_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="射灯右"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_cur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="窗帘"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门禁"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风扇"
            android:textColor="#ffffff" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_open_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="104dp"
        android:layout_toRightOf="@+id/rg_state"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/ra_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="开"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_cls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停"
            android:textColor="#ffffff" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_left_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignParentLeft="true"
        android:text="100"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_right_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignParentRight="true"
        android:text="200"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <RadioGroup
        android:id="@+id/rg_check_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_right_number"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:visibility="invisible" >

        <RadioButton
            android:id="@+id/ra_test_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试数值"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_ill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光照"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="燃气"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气压"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_smo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烟雾"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="PM2.5"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Co2"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ra_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人体红外"
            android:textColor="#ffffff" />
    </RadioGroup>

</RelativeLayout>